# Generated by Chef for <%= node.name %>

God::Contacts::Email.defaults do |d|
  <% @email_settings.each do |setting, value| -%>
   d.<%= setting %> = <%= (setting == 'delivery_method') ? ":#{value}" : "\"#{value}\"" %>
  <% end -%>
end

God.contact(:email) do |c|
  <% @contact.each do |setting, value|-%>
  c.<%= setting %> = "<%= value %>"
  <% end -%>
end

<% if not @globals.empty? -%>
<%   @globals.each do |key, value | %>
<%= key.upcase %> = <%= value %>
<%   end -%>
<% end -%>

God.load "<%= @include_path %>/*.rb"
